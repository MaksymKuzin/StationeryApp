<Window x:Class="StationeryApp.AddDeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Delivery" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Goods ID" Margin="5"/>
            <TextBox x:Name="GoodsIdBox" Margin="5"/>

            <TextBlock Text="Supplier ID" Margin="5"/>
            <TextBox x:Name="SupplierIdBox" Margin="5"/>

            <TextBlock Text="Quantity" Margin="5"/>
            <TextBox x:Name="QuantityBox" Margin="5"/>

            <Button Content="Save" Width="100" Margin="5" HorizontalAlignment="Center" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
